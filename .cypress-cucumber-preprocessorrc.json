{
    "json": {
      "enabled": true,
      "output": "cypress/reports/json/cucumber-report.json",
      "formatter": "cucumber-json-formatter.exe"
    },
    "messages": {
      "enabled": false,
      "output": "jsonlogs/messages.ndjson"
    },
    "html": {
      "enabled": true,
      "nonGlobalStepDefinitions": false
    },
    "stepDefinitions": [
        "[filepath]/**/*.{js,ts}",
        "[filepath].{js,ts}",
        "cypress/e2e/step_definitions/*.{js,ts}",
        "[filepath]\\***.{js,ts}",
        "[filepath].{js,ts}",
        "cypress\\e2e\\step_definitions\\*\\*.{js,ts}"
        
    ]
    
}
